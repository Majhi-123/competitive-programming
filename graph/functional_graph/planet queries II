#include <bits/stdc++.h>
using namespace std;
vector<vector<int>> par(200002,vector<int>(20,-1));
//vector<int> adj[200002];
vector<int> dist(200003);
vector<int> vis(200003);
void dfs(int node){
    if(vis[node]){
        return ;
    }
    
    vis[node] =1;
    dfs(par[node][0]);
    dist[node] = dist[par[node][0]] +1;
}
int jump(int node,int x){
    
    if(x<=0){
        return node;
    }
    for(int i=0;i<20;i++){
        if(x&(1<<i)){
            node = par[node][i];
        }
    }
    
    return node;
}
int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
 
    int T = 1;
   // cin >> T;
    while (T--) {
       int n,q;
       cin>>n>>q;
       for(int i=1;i<=n;i++){
           int x;
           cin>>x;
           par[i][0] =x;
       }
       
       for(int i=1;i<20;i++){
           for(int j=1;j<=n;j++){
               par[j][i] = par[par[j][i-1]][i-1];
           }
       }
       
       for(int i=1;i<=n;i++){
           if(!vis[i]){
               dfs(i);
           }
       }
       
       for(int i=1;i<=q;i++){
           int x,y;
           cin>>x>>y;
           
           int circle = jump(x,dist[x]);
           
           if(jump(x,dist[x]-dist[y]) == y){
               cout<<dist[x]-dist[y]<<"\n";
           }
           else if(jump(x,dist[circle] - dist[y] + dist[x]) == y){
               cout<<dist[circle] - dist[y] + dist[x]<<"\n";
           }
           else{
               cout<<-1<<"\n";
           }
           
       }
    }
    return 0;
}
